<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <pattern>%d %p %t %c - %m%n</pattern>
        </layout>
    </appender>

    <logger name="net.sf.ehcache" level="INFO"/>

    <root level="debug">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>